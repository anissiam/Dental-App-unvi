<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ef4447" />
            <stroke
                android:width="1dp"
                android:color="#944144" />
            <corners
                android:radius="300dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ef4447"
                android:endColor="#ef4e191d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8e3137" />
            <corners
                android:radius="300dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>